then
     logInfo("Mail","---------------------------------------------------------------------------------    Sending a mail to" + EmailReminder.state)
     if(EmailReminder.state != "") {
     	sendMail( EmailReminder.state + "" , "SmartDrinking Erinnerung " + EmailReminder.state, "Hallo, diese Mail wurde versandt, da das Trink-Level ungew√∂hnlich niedrig ist. Bitte melde dich doch kurz.  ")
        postUpdate(EmailReminder,"")
     }else{
        logInfo("Mail"," Do nothing, value is" +EmailReminder.state )
     }
end